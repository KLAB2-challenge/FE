<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.challenge.PostRecordActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_pr_backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/MG_40">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_left_arrow"
            tools:ignore="MissingConstraints" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_pr_postBtn"
        android:layout_width="64dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/MG_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Post"
            android:textColor="@color/MG_40"
            android:fontFamily="@font/googlesans_regular"
            tools:ignore="MissingConstraints" />

    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/v_pr_topLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_pr_postBtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_pr_titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_pr_topLine"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="24dp"
        android:text="Title"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et_pr_titleInput"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_titleLabel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/background_post_record"
        />

    <TextView
        android:id="@+id/tv_pr_contentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pr_titleInput"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:text="Content"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/et_pr_contentInput"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_contentLabel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/background_post_record"
        />

    <TextView
        android:id="@+id/tv_pr_photoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pr_contentInput"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:text="Photo"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="16sp"
        android:textColor="#000000" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_pr_photoInput"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr_photoLabel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/GS_50">

        <ImageView
            android:id="@+id/iv_pr_addedimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/BK"
            android:visibility="gone"
        />

        <ImageView
            android:id="@+id/iv_pr_addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_image" />

        <TextView
            android:id="@+id/tv_pr_addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:layout_gravity="center_horizontal"
            android:text="Press and add\nphoto to proof your challenge"
            android:textSize="10sp"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="@color/GS_60"
            android:textAlignment="center"/>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>