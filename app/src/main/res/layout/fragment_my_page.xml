<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/MG_20"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mypage_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:elevation="1dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/GS_60"
            android:elevation="2dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mypage_profile_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:background="@color/WH"
        android:elevation="3dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_mypage_profile"
        app:layout_constraintEnd_toEndOf="@id/cv_mypage_profile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/cv_mypage_profile_add"
        app:layout_constraintEnd_toEndOf="@id/cv_mypage_profile_add"
        app:layout_constraintStart_toStartOf="@id/cv_mypage_profile_add"
        app:layout_constraintTop_toTopOf="@id/cv_mypage_profile_add" />


</androidx.constraintlayout.widget.ConstraintLayout>