<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/MG_20"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mypage_profile_border"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="1dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@id/cv_mypage_profile"
        app:layout_constraintStart_toStartOf="@id/cv_mypage_profile"
        app:layout_constraintTop_toTopOf="@id/cv_mypage_profile"
        app:layout_constraintBottom_toBottomOf="@id/cv_mypage_profile">

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/ifb_mypage_profile_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:elevation="2dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mypage_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:elevation="2dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_mypage_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/GS_60"
            android:elevation="2dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mypage_profile_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:background="@color/WH"
        android:elevation="3dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_mypage_profile"
        app:layout_constraintEnd_toEndOf="@id/cv_mypage_profile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/cv_mypage_profile_add"
        app:layout_constraintEnd_toEndOf="@id/cv_mypage_profile_add"
        app:layout_constraintStart_toStartOf="@id/cv_mypage_profile_add"
        app:layout_constraintTop_toTopOf="@id/cv_mypage_profile_add" />

    <TextView
        android:id="@+id/tv_mypage_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_mypage_profile"
        android:text="challengerrrlab"
        android:textSize="24dp"
        android:fontFamily="@font/googlesans_bold"
        android:textColor="@color/BK"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_mypage_my_coin_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_user_name">

        <TextView
            android:id="@+id/tv_mypage_my_coin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my coin /"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="@color/BK"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_mypage_my_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toRightOf="@id/tv_mypage_my_coin_label"
            app:layout_constraintTop_toTopOf="parent"
            android:text="25"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="16dp"
            android:textColor="@color/BK"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_mypage_all_coin_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_mypage_my_coin_container">

        <TextView
            android:id="@+id/tv_mypage_all_coin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="accumulated coin /"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="@color/GS_50"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_mypage_all_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toRightOf="@id/tv_mypage_all_coin_label"
            app:layout_constraintTop_toTopOf="parent"
            android:text="65"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="16dp"
            android:textColor="@color/GS_50"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_mypage_choose_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="13dp"
        android:paddingVertical="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_mypage_all_coin_container"
        android:text="choose design"
        android:textColor="@color/BK"
        android:fontFamily="@font/googlesans_medium"
        android:textSize="14dp"
        android:background="@drawable/background_mypage_choose_design"/>

    <View
        android:id="@+id/v_mypage_first_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="49dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_choose_design"
        android:background="@color/GS_80"/>

    <TextView
        android:id="@+id/tv_mypage_notices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:text="Notices"
        app:layout_constraintTop_toBottomOf="@id/v_mypage_first_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="18dp"
        android:textColor="@color/GS_30"/>

    <View
        android:id="@+id/v_mypage_second_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_notices"
        android:background="@color/GS_80"/>

    <TextView
        android:id="@+id/tv_mypage_FAQs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:text="FAQs"
        app:layout_constraintTop_toBottomOf="@id/v_mypage_second_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="18dp"
        android:textColor="@color/GS_30"/>

    <View
        android:id="@+id/v_mypage_third_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_FAQs"
        android:background="@color/GS_80"/>

    <TextView
        android:id="@+id/tv_mypage_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:text="Edit Profile"
        app:layout_constraintTop_toBottomOf="@id/v_mypage_third_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="18dp"
        android:textColor="@color/GS_30"/>

    <View
        android:id="@+id/v_mypage_fourth_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_edit_profile"
        android:background="@color/GS_80"/>

    <TextView
        android:id="@+id/tv_mypage_inquiries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:text="Inquiries"
        app:layout_constraintTop_toBottomOf="@id/v_mypage_fourth_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="18dp"
        android:textColor="@color/GS_30"/>

    <View
        android:id="@+id/v_mypage_fifth_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_inquiries"
        android:background="@color/GS_80"/>

    <TextView
        android:id="@+id/tv_mypage_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:text="Log Out"
        app:layout_constraintTop_toBottomOf="@id/v_mypage_fifth_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="18dp"
        android:textColor="#0038FF"/>

    <View
        android:id="@+id/v_mypage_sixth_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_log_out"
        android:background="@color/GS_80"/>

    <TextView
        android:id="@+id/tv_mypage_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="10dp"
        android:paddingLeft="8dp"
        android:text="Delete Account"
        app:layout_constraintTop_toBottomOf="@id/v_mypage_sixth_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="18dp"
        android:textColor="#FF0000"/>

    <View
        android:id="@+id/v_mypage_seventh_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_delete_account"
        android:background="@color/GS_80"/>

</androidx.constraintlayout.widget.ConstraintLayout>