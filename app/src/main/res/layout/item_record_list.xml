<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="312dp"
        android:layout_height="148dp"
        android:layout_gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_pr_userImg_border"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/green"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="@id/cv_pr_userImg_border"
            app:layout_constraintEnd_toEndOf="@id/cv_pr_userImg_border"
            app:layout_constraintStart_toStartOf="@id/cv_pr_userImg_border"
            app:layout_constraintTop_toTopOf="@id/cv_pr_userImg_border" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_pr_userImg"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:backgroundTint="#D9D9D9"
            android:elevation="1dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/cv_pr_userImg_border"
            app:layout_constraintEnd_toEndOf="@id/cv_pr_userImg_border"
            app:layout_constraintStart_toStartOf="@id/cv_pr_userImg_border"
            app:layout_constraintTop_toTopOf="@id/cv_pr_userImg_border"/>


        <TextView
            android:id="@+id/tv_rd_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/googlesans_bold"
            android:text="user"
            android:textColor="#000000"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@+id/cv_pr_userImg_border"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rd_postDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_regular"
            android:lineHeight="10dp"
            android:text="date"
            android:textColor="@color/GS_60"
            android:textSize="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_rd_userName"
            app:layout_constraintTop_toBottomOf="@+id/tv_rd_userName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="14dp"
            android:elevation="1dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:background="@color/GS_40"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image2" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/googlesans_bold"
            android:text="Title of Record"
            android:textColor="@color/BK"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/cv_item_rl"
            app:layout_constraintTop_toTopOf="@id/cv_item_rl" />

        <TextView
            android:id="@+id/tv_item_rl_content"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_regular"
            android:text="Content of Record"
            android:textColor="@color/GS_20"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/tv_item_rl_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_rl_title" />

        <ImageView
            android:id="@+id/iv_item_rl_message"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_message"
            app:layout_constraintBottom_toBottomOf="@id/cv_item_rl"
            app:layout_constraintStart_toEndOf="@id/cv_item_rl" />

        <TextView
            android:id="@+id/tv_item_rl_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/googlesans_regular"
            android:text="2"
            android:textColor="@color/BK"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_rl_message"
            app:layout_constraintStart_toEndOf="@id/iv_item_rl_message"
            app:layout_constraintTop_toTopOf="@id/iv_item_rl_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
